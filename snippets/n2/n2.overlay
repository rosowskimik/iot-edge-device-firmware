/ {
	zephyr,user {
		env-sensors = <&bmp180 &dht22 &bh1750>;
	};

	dht22: dht22 {
		compatible = "aosong,dht";
		dht22;
		dio-gpios = <&gpio0 3 GPIO_PULL_UP>;
		status = "okay";
	};
};

&i2c0 {
	bh1750: bh1750@23 {
		compatible = "rohm,bh1750";
		reg = <0x23>;
		status = "okay";
	};

	bmp180: bmp180@77 {
		compatible = "bosch,bmp180";
		osr-press = <1>;
		reg = <0x77>;
		status = "okay";
	};
};
